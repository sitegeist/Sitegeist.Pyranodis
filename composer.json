{
    "name": "sitegeist/pyranodis",
    "type": "neos-package",
    "license": "GPL-3.0-or-later",
    "require": {
        "php": "^8.2",
        "neos/neos": "^9.0",
        "sitegeist/noderobis": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.8",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Sitegeist\\Pyranodis\\": "Classes/"
        }
    },
    "extra": {
        "neos": {
            "package-key": "Sitegeist.Pyranodis"
        }
    },
    "scripts": {
        "lint": "phpcs --colors -n --standard=PSR12 Classes",
        "analyse": "phpstan analyse",
        "test:unit": [
            "phpunit --colors Tests/Unit"
        ],
        "test": ["@test:unit"]
    },
    "repositories": {
        "sitegeist/noderobis": {
            "type": "vcs",
            "url": "https://github.com/sitegeist/Sitegeist.Noderobis.git"
        }
    },
    "config": {
        "allow-plugins": {
            "neos/composer-plugin": true
        }
    }
}
